<?xml version="1.0" encoding="utf-8"?>
<com.can.aday.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:can="http://schemas.android.com/apk/res/com.can.aday"
    android:id="@+id/id_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    can:rightPadding="63dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <include
            android:id="@+id/main_menu"
            layout="@layout/activity_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_line_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="toggleMenu"
                android:text="@string/hello_world" />
        </LinearLayout>
    </LinearLayout>

</com.can.aday.SlidingMenu>