<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView 
        android:id="@+id/video_backgroud_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/music_backgroud_image"
        android:contentDescription="@drawable/music_backgroud_image"/>
	<RelativeLayout 
	    android:layout_width="48dp"
	    android:layout_height="50dp"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="63dp">
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/aday_wire_box"
	        android:contentDescription="@drawable/aday_wire_box"/>

	    <TextView 
	        android:id="@+id/video_month"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dp"
	        android:layout_centerHorizontal="true"
	        android:text="Mar"
	        android:textSize="14sp"
	        android:textColor="#ffffff"/>
	    <View 
	        android:layout_width="38dp"
	        android:layout_height="0.5dp"
	        android:background="#ffffff"
	        android:layout_centerInParent="true"/>
	   <TextView 
	       android:id="@+id/video_day"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="27dp"
	        android:layout_centerHorizontal="true"
	        android:text="6"
	        android:textSize="14sp"
	        android:textColor="#ffffff"/>
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:layout_marginLeft="79dp"
	    android:layout_marginRight="79dp"
	    android:layout_marginTop="136dp"
	    android:background="#ffffff"/>
	<ImageView 
	    android:id="@+id/video_play"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_marginTop="159dp"
	    android:paddingLeft="18dp"
	    android:paddingStart="18dp"
	    android:paddingRight="10dp"
	    android:paddingEnd="10dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:background="@drawable/play_video_circle"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/music_play_icon_in"
	    android:contentDescription="@drawable/music_play_icon_in"/>
	<TextView 
	    android:id="@+id/video_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="260dp"
	    android:layout_centerHorizontal="true"
	    android:text="星银岛   预告"
	    android:textColor="#ffffff"
	    android:textSize="17sp"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:layout_marginLeft="100dp"
	    android:layout_marginRight="100dp"
	    android:layout_marginTop="290dp"
	    android:background="#ffffff"/>
	<TextView 
	    android:id="@+id/video_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="307dp"
	    android:layout_centerHorizontal="true"
	    android:text="#奇幻冒险/05’34’’"
	    android:textColor="#ffffff"
	    android:textSize="12sp"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#44000000"
	    android:layout_marginTop="362dp"
	    android:orientation="vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="14dp"
	        android:layout_marginStart="14dp"
	        android:layout_marginTop="19dp"
	        android:text="故事简介"
	        android:textColor="#ffffff"
	        android:textSize="15sp"/>
	    <TextView 
	        android:id="@+id/video_context"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="14dp"
	        android:layout_marginStart="14dp"
	        android:layout_marginTop="14dp"
	        android:text="故事内容"
	        android:textColor="#ffffff"
	        android:textSize="12sp"/>
	</LinearLayout>
</RelativeLayout>
