<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 排行里面的单个视频详情 -->
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/music_backgroud_image"
        android:contentDescription="@drawable/music_backgroud_image"/>
    <ImageView 
        android:id="@+id/video_classify_details_player"
        android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_marginTop="130dp"
	    android:paddingLeft="18dp"
	    android:paddingStart="18dp"
	    android:paddingRight="10dp"
	    android:paddingEnd="10dp"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:background="@drawable/play_video_circle"
	   	android:layout_centerHorizontal="true"
	    android:src="@drawable/music_play_icon_in"
	    android:contentDescription="@drawable/music_play_icon_in"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#44ffffff"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/video_order_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:text="你所遗忘秤童年"
            android:textColor="#000000"
            android:textSize="17sp"/>
        <TextView 
            android:id="@+id/video_order_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:text="#记录/10’18’’"
            android:textColor="#343434"
            android:textSize="15sp"/>
        <TextView 
            android:id="@+id/video_order_details_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:text="  童年时她是......"
            android:textColor="#343434"
            android:textSize="13sp"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView 
                android:id="@+id/video_order_details_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:src="@drawable/aday_collect_icon"
                android:contentDescription="@drawable/aday_collect_icon"/>
            <TextView 
                android:id="@+id/video_order_details_collect_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="336"
                android:textColor="#AEAFAF"
                android:textSize="15sp"/>
            <ImageView 
                android:id="@+id/video_order_details_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/aday_share_icon"
                android:contentDescription="@drawable/aday_share_icon"/>
            <TextView 
                android:id="@+id/video_order_details_share_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="620"
                android:textColor="#AEAFAF"
                android:textSize="15sp"/>
            <ImageView 
                android:id="@+id/video_order_details_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/aday_comment_icon"
                android:contentDescription="@drawable/aday_comment_icon"/>
            <TextView 
                android:id="@+id/video_order_details_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="143"
                android:textColor="#AEAFAF"
                android:textSize="15sp"/>
            <ImageView 
                android:id="@+id/video_order_details_buffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/aday_buffer_icon"
                android:contentDescription="@drawable/aday_buffer_icon"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="缓存"
                android:textColor="#AEAFAF"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
