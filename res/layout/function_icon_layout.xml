<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/function_collection"
        android:layout_width="52dp"
        android:layout_height="match_parent"
        android:contentDescription="@drawable/collection_icon"
        android:padding="13dp"
        android:src="@drawable/collection_icon" />

    <ImageView
        android:id="@+id/function_comment"
        android:layout_width="52dp"
        android:layout_height="match_parent"
        android:contentDescription="@drawable/comment_icon_white"
        android:paddingBottom="14dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="14dp"
        android:src="@drawable/comment_icon_white" />

    <ImageView
        android:id="@+id/function_share"
        android:layout_width="51dp"
        android:layout_height="match_parent"
        android:contentDescription="@drawable/share_icon"
        android:padding="12.2dp"
        android:src="@drawable/share_icon" />

</LinearLayout>