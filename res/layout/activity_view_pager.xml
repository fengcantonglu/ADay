<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/welcom_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>
    <!-- 引导页顶部文字 -->

    <TextView
        android:id="@+id/welcom_text_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.5"
        android:text="@string/look_at_the"
        android:textColor="@android:color/white"
        android:textScaleX="1.1"
        android:textSize="16sp" />
    <!-- 引导页立即体验 -->

    <TextView
        android:id="@+id/welcom_text"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/shape_line_blue_stroke"
        android:gravity="center"
        android:text="@string/experience_immediately"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" >

        <!-- 底部三个点 -->

        <RadioGroup
            android:id="@+id/welocm_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/welcom_radio_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null" />

            <RadioButton
                android:id="@+id/welcom_radio_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null" />

            <RadioButton
                android:id="@+id/welcom_radio_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null" />
        </RadioGroup>
        <!-- 底部图片 -->

        <ImageView
            android:id="@+id/welcom_image_view"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:contentDescription="@drawable/welcome_progress_1"
            android:src="@drawable/welcome_progress_1" />
    </RelativeLayout>

</RelativeLayout>