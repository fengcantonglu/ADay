<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/content_image_layout"
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:background="@drawable/book_music_backgroup_image" >

                <RelativeLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp" >

                    <ImageView
                        android:id="@+id/progress_image"
                        android:layout_width="235dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="6dp"
                        android:src="@drawable/progress_line" />

                    <TextView
                        android:id="@+id/currut_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/progress_image"
                        android:text="01:44"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/music_time_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/progress_image"
                        android:text="04:35"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/play_or_pause"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@drawable/music_pause_image"
                    android:src="@drawable/music_pause_image" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/date_image"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginTop="-48.5dp"
                android:contentDescription="@drawable/date_image"
                android:src="@drawable/date_image" />

            <TextView
                android:id="@+id/arc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="面包匠的狂欢节"
                android:textColor="@color/bottom_text_selet_color"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <View
                    android:layout_width="27dp"
                    android:layout_height="1dp"
                    android:background="@color/drive_line_color" />

                <TextView
                    android:id="@+id/article_athor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="安德鲁·林赛"
                    android:textColor="@color/black"
                    android:textSize="12.5sp" />

                <View
                    android:layout_width="27dp"
                    android:layout_height="1dp"
                    android:background="@color/drive_line_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/athor_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:padding="10dp"
                android:text="\t\t周杰伦1979年1月18日出生于台湾省台北县（现新北市）[28]  ，祖籍福建省永春县[29]  。父亲周耀中是淡江中学的物理老师，母亲叶惠美是淡江中学的美术老师，周杰伦读初中二年级时，周耀中和叶惠美办理了离婚手续，并协议商定周杰伦归叶惠美抚养。"
                android:textColor="@color/text_color_black_434343"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/drive_line_color" />

            <LinearLayout
                android:id="@+id/article_centent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="8dp" >
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="-3dp"
                android:layout_marginTop="10dp"
                android:padding="11dp"
                android:text="@string/like"
                android:textColor="@color/main_text_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@color/bottom_text_selet_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3.5dp" >

                <ImageView
                    android:id="@+id/like_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="13dp"
                    android:contentDescription="@drawable/like_icon"
                    android:padding="16dp"
                    android:src="@drawable/like_icon" />

                <LinearLayout
                    android:id="@+id/like_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    android:padding="2dp" >

                    <com.can.aday.view.MyImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/user_header_1" />

                    <com.can.aday.view.MyImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/user_header_2" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="#FFE8CB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="-3dp"
                android:layout_marginTop="25dp"
                android:padding="11dp"
                android:text="@string/newcomment"
                android:textColor="@color/main_text_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@color/bottom_text_selet_color" />

            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="13dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:text="2016\r\nMar.6."
                android:textColor="#AE9C88"
                android:textSize="8sp" />

            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="33dp"
                android:background="@color/bottom_text_selet_color" />

            <TextView
                android:id="@+id/more_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bottom_group_backgroud"
                android:gravity="center"
                android:padding="13dp"
                android:text="@string/show_more_comment"
                android:textColor="@color/text_color_black_434343"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/main_title_layout" />

</RelativeLayout>